<!--            <property name="sqlSession" ref="sqlSession"/>-->
<!--         </bean>-->
<!--    方式二-->
        <bean id="userMapper" class="com.jie.dao.UserMapperImp2">
            <property name="sqlSessionFactory" ref="sqlSessionFactory"/>
        </bean>
</beans>